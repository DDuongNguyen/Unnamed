<% if @logged_in %>
<%= button_to "Log out", '/logout', method: :delete %>
<%= button_to "Profile", "/users/#{@user_id}", method: :get %>
<% else %>
<%= button_to "Login", '/login/new' %>
<%= button_to "Sign Up", 'users/new', method: :get %>
<% end %>
<ul>
  <% @events.each do |event|  %>

    <li>
      <%= link_to event.title, event%>
      <br>
      <%= event.location %> on <%= event.date %>
      <br>
      <%=  event.snippet %>
      <br><br>
    </li>

  <% end %>
</ul>
