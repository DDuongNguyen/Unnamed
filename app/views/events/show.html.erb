<h1><%= @event.title %></h1>
<div class="event_info">

<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.date %></p>
<p>Description: <%= @event.snippet %></p>
<p>Free? <%= @event.cost %></p>
<p>Cost Description: <%= @event.cost_description %></p>
<p><%=link_to @event.url, "#{@event.url}" %></p>

<%= button_to "RSVP", "/events/#{@event.id}/create" %>
</div>


<h1>Attendees</h1>
<!-- <div class="attendees"> -->
<ul>
  <% @event.users.each do |user| %>
    <li>
       <a href=<%= "/users/#{user.id}" %>><img src=<%= user.pic_url %> width="50" height="50"></a>
    </li>
  <!-- </div> -->
  <% end %>
</ul>
