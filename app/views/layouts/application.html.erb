<!DOCTYPE html>
<html>
  <head>
    <title>UnnamedApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="container-fluid">
      <header>
         <div class="row align-items-start">
           <div class="col text-center">
              <a href="/events"><img src="https://thumbs.gfycat.com/BasicNeglectedAnnashummingbird-size_restricted.gif" width="100" height= "100" ></a>
           </div>
           <div id="title" class="col">
               BLABLABLABL
           </div>
         </div>

         <div class="row">
           <% if @logged_in %>
            <div class="col text-center">
             <%= button_to "Home", "/events", method: :get, class: 'btn btn-small' %>
            </div>
            <div class="col text-center">
              <%= button_to "Log out", '/logout', method: :delete, class: 'btn btn-small' %>
            </div>
            <div class="col text-center">
             <%= button_to "Profile", "/users/#{@user_id}", method: :get, class: 'btn btn-small'%>
            </div>
           <% else %>
           <div class="col text-center">
             <%= button_to "Log In", '/login/new', class: 'btn btn-small' %>
           </div>
           <div class="col text-center">
             <%= button_to "Sign Up", '/users/new', method: :get, class: 'btn btn-small' %>
          </div>
           <% end %>
         </div>
      </header>
    </div>
    <br>

    <div class="container">
      <%= yield %>
    </div>
    <br>

    <div class="container-fluid">

        <footer>
          <div class="row">
          <%  if @logged_in %>
          <div class="col text-center">
            <p>Logged in as <%= @current_user.name %> </p>
          </div>
          <div class="col text-center">
            <%= link_to "About", "/google.com" %>
          </div>
          <div class="col text-center">
            <%= link_to "Contact", "/google.com" %>
          </div>
          <div class="col text-center">
            <%= link_to "Terms of Service", "/google.com" %>
          </div>

          <% else %>
            <div class="col text-center">
              <%= link_to "About", "/google.com" %>
            </div>
            <div class="col text-center">
              <%= link_to "Contact", "/google.com" %>
            </div>
            <div class="col text-center">
              <%= link_to "Terms of Service", "/google.com" %>
            </div>
          <% end %>
        </div>

        </footer>
    </div>

  </body>
</html>
