<!DOCTYPE html>
<html>
  <head>
    <title>UnnamedApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header">

       <div class="cat" style="float:left;">
         <span style="display:inline;"> <a href="/events"><img src="https://thumbs.gfycat.com/BasicNeglectedAnnashummingbird-size_restricted.gif" width="100" height= "100" ></a> </span>
         <span style="display:inline;"><h1>CAT </h1></span>
       </div>



       <div class="navbar">
       <% if @logged_in %>
       <%= link_to "Home", "/events", class: "active" %>
        <div>

          <%= button_to "Log out", '/logout', method: :delete, class: "nav_button" %>
          <%= link_to "Profile", "/users/#{@user_id}", class: "nav_button"  %>
        </div>
       <% else %>
       <%= link_to "Home", "/events", class: "active" %>
       <%= link_to "Log In", '/login/new', class: "nav_button" %>
       <%= link_to "Sign Up", '/users/new', method: :get, class: "nav_button" %>
       <% end %>
       </div>

    </header>

    <div id="content-div">
      <%= yield %>
    </div>

  </body>

  <footer id='foot'>
    <%  if @logged_in %>
    <p>Logged in as <%= @current_user.name %> </p>
    <%= link_to "About", "http://trololololololo.com/" %>
    |
    <%= link_to "Privacy", "http://trololololololo.com/" %>
    |
    <%= link_to "Terms of Service", "http://trololololololo.com/" %>
    <% else %>
      <%= link_to "About", "http://trololololololo.com/" %>
      |
      <%= link_to "Privacy", "http://trololololololo.com/" %>
      |
      <%= link_to "Terms of Service", "http://trololololololo.com/" %>
    <% end %>
  </footer>
</html>
