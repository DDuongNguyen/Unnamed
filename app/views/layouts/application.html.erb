<!DOCTYPE html>
<html>
  <head>
    <title>UnnamedApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header">

       <div class="cat" style="float:left;">
         <span style="display:inline;"> <a href="/events"><img src="https://thumbs.gfycat.com/BasicNeglectedAnnashummingbird-size_restricted.gif" width="100" height= "100" ></a> </span>
         <span style="display:inline;"><h1>BLABLABLABL </h1></span>
       </div>

       <div class="navbar">
       <% if @logged_in %>
       <%= button_to "Home", "/events", method: :get %>
       <%= button_to "Log out", '/logout', method: :delete %>
       <%= button_to "Profile", "/users/#{@user_id}", method: :get %>
       <% else %>
       <%= button_to "Log In", '/login/new' %>
       <%= button_to "Sign Up", '/users/new', method: :get %>
       <% end %>
       </div>

    </header>

    <div id="content-div">
      <%= yield %>
    </div>

  </body>
  <footer>
    <%  if @logged_in %>
    <p>Logged in as <%= @current_user.name %> </p>
    <%= link_to "About", "/google.com" %>
    <%= link_to "Contact", "/google.com" %>
    <%= link_to "Terms of Service", "/google.com" %>
    <% else %>
      <%= link_to "About", "/google.com" %>
      <%= link_to "Contact", "/google.com" %>
      <%= link_to "Terms of Service", "/google.com" %>
    <% end %>
  </footer>
</html>
