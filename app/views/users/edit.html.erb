
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
    <br>
  <%= f.text_field :name %>
    <br>
  <%= f.label :bio %>
    <br>
  <%= f.text_area :bio %>
    <br>
  <%= f.label :pic_url %>
    <br>
  <%= f.text_field :pic_url %>
  <br>
    <br>
  <%= f.submit %>

<% end %>
