
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<h1 class="sub-header">REGISTER NEW USER HERE!!!!!</h1>

<div class="signup"">
<%= form_for @user do |f| %>
  <%= f.label :name %>
    <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :user_name %>
    <br>
  <%= f.text_field :user_name %>
  <br>
  <%= f.label :password %>
    <br>
  <%= f.password_field :password %>
    <br>
  <%= f.label :password_confirmation %>
    <br>
  <%= f.password_field :password_confirmation %>
    <br>
      <br>
  <%= f.submit class: 'btn btn-small' %>

<% end %>
</div>
