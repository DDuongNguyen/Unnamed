
<div id="bio">
  <img src='<%=@user.pic_url%>',width= "100" height= "150" >
  <br>
  <br>
  <h1><%= @user.name %></h1>
  <p><%= @user.bio %></p>
  <br>

  <% if @current_user.id == @user.id %>
  <%= button_to "People Change", "/users/#{@current_user.id}/edit", method: :get, class: 'btn btn-small' %>
  <% end %>
  <br>
</div>


<h3 class="sub-header">Your dates:</h3>

<ul>
  <% @user.events.each do |event| %>
    <li>Event name: <%= link_to event.title, "/events/#{event.id}" %></li>
    <br>

    <li>In <%= event.location %> on <%= event.date %></li>
    <br>

    <li>Event description: <%= event.snippet %></li>
    <br>

    <li>
      <% if @current_user.id == @user.id %>
       <%= button_to "Delete Date", "/users/#{event.id}/delete", method: :delete, class: 'btn btn-small' %>
      <% end %>
    </li>
    <br>
  <% end %>
</ul>
